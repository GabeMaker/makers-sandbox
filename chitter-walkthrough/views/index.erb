
<h2>Cheets</h2>

<ul style="list-style-type:none">
  <% @cheets.reverse.each do |cheet| %>
    <li><%= cheet.text %> by <%= cheet.author %> at <%= cheet.created_at %></li>
  <% end %>
</ul>


<form action="/cheets" method="post">
    Your Cheet <%= "(will be anonymous)" if !current_user %>: <input type="text" name="content">

    <% if current_user %>
      <input type="hidden" name="author" value="<%= current_user.username %>">
    <% else %>
      <input type="hidden" name="author" value="anon">
    <% end %>

    <input type="submit" value="Cheet!">
</form>
